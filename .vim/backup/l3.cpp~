// void afunct(int a[][]); will not compile must specify dimensions after first.
void afunct(int a[][10]) {

}

void bfunc(int **b) {
    
}

void f(int *a) {
    int *p = a;

    for(int i = 0; i < 10; i++) {
        cout << *p << endl;
        p++;
    }
}

int main (int arc, char const *argv[]) {
    int a[10][10] = {};
    int **b = new int*[10];
    for(int i = 0; i < 10; i++) {
        b[i] = new int[10];
    }
    afunct(a);
    bfunc(b);

    int i = 4;
    int &ri = i; // int reference is equal to i
    ri = ri + 10; // would not change i but will change ri

    int *pi = &i;
    cout << i << endl;
    cout << pi << endl; // prints out the memory address just like c
   
    *pi = *pi + 10; 
    cout << i << endl;
    cout << pi << endl;

    return 0;    
}



