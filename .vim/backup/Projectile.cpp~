#include "Projectile.h"

Projectile::Projectile() {
    symbol = '#';
    x = 0;
    y = 0;
}

Projectile::Projectile(int newX, int newY, char sym) {
    symbol = sym;
    x = newX;
    y = newY;
}

Projectile::Projectile(int a, int b) {
    x = a;
    y = b;
}

Projectile::Projectile(char t) {
    x = 0;
    y = 0;
    symbol = t; 
    rate = 0;
}

void Projectile::timeStep(int ticks) {
    if(ticks >= 0) {
        if(symbol == '|') {
            y--; // playership shot
        } else {
            y++;
        }
    }
}

char Projectile::getShape() {
    return symbol;
}

void Projectile :: setShape(char c) {
    symbol = c;
}
