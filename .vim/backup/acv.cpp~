#include <iostream>
#include <iomanip>
#include <string.h>
using namespace std;


int main() {
    int cases;
    cin >> cases; 
    char key[8] = "Monthly";

    for(int i = 0; i < cases; i++) {
        int users;
        cin >> users;

        double total = 0.00;
        int breakloop = 1;

        while (breakloop) {
            int num;
            cin >> num;

            if(num == users) {
                breakloop = 0;
            }

            char subtype[8];
            cin >> subtype;

            if(strcmp(key, subtype) == 0) {
               total += 119.88; 
            }
            else {
                total += 99;
            }
        }
        cout << fixed;
        cout << setprecision(2);
        cout << total << endl;
    }

    return 0;


}
