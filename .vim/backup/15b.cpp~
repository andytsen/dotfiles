#include <iostream>
#define MIN(a,b) ((a > b) ? b : a)
using namespace std;

int main()
{
    int t;
    cin >> t;
    int n, m, x1, y1, x2, y2;

    for(int i = 0; i < t; i++)
    {
        cin >> n >> m >> x1 >> y1 >> x2 >> y2;
        bool a[n][m]; 
        for(int i = 0; i < n; i++)
        {
            for(int j = 0; j < m; j++)
            {
                a[i][j] = false;
            }
        }

        cout << MIN(y2 - 1, y1 - 1) << endl; 
        cout << MIN(n - x2, n - x1) << endl; 
        cout << MIN(x2 - 1, x1 - 1) << endl; 
        cout << MIN(m - y2, m - y1) << endl; 

        // check up
        for(int i = 0; i < MIN(y2 - 1, y1 - 1); i++)
        {
            a[x1][y1 - i] = 1;
            a[x2][y2 - i] = 1;
        }
        // check right
        for(int i = 0; i < MIN(n - x2, n - x1); i++)
        {
            a[x1 + i - 1][y1 - 1] = 1;
            a[x2 + i - 1][y2 - 1] = 1;
        }
        // check left
        for(int i = 0; i < MIN(x2 - 1, x1 - 1); i++)
        {
            a[x1-i-1][y1-1] = 1;
            a[x2-i-1][y2-1] = 1;
        }
        // check down
        for(int i = 0; i < MIN(m - y2, m - y1); i++)
        {
            a[x1-1][y1 + i - 1] = 1;
            a[x2-1][y2 + i - 1] = 1;
        }
        int r = 0;
        for(int i = 0; i < n; i++)
        {
            for(int j = 0; j < m; j++)
            {
                if(!a[i][j])
                    r++;
            }
        }
        cout << r << endl;
    }

    return 0;
}
