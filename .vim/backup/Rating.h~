#ifndef rating_H
#define	rating_H
class Person;

class Rating{
public:
	Person* pperson;
	int rating;
	rating();
	rating(Person*, int);

	// returns true if the current rating < parameter score
	bool operator < (const Rating& person) const {
		return rating < person.rating;
	}

	// returns true if the current rating > parameter score
	bool operator > (const Rating& person) const {
		return rating > person.rating;
	}

	// returns true if the current rating <= parameter score
	bool operator <= (const Rating& person) const {
		return rating <= person.rating;
	}

	// returns true if the current rating >= parameter score
	bool operator >= (const Rating& person) const {
		return rating >= person.rating;
	}

	// returns true if the current Node rating == parameter score
	bool operator == (const Rating& person) const {
		return rating == person.rating;
	}

    bool operator != (const Rating& person) const {
        return rating != person.rating;
    }   
};
#endif	/* rating_H */

