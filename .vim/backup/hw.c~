#include <stdio.h>

int fun_for(int x, unsigned int p) {
    int result;
    for(result = 1; p != 0; p = p >> 1) {
        if (p & 0x1) {
            result *= x;
        }
        x = x * x;
    }
    return result; 
}

int main() {

    // test
    int x;

    x = fun_for(1, 1);
    printf("%d\n", x); 
    
    x = fun_for(2, 1);
    printf("%d\n", x);
    
    x = fun_for(1, 2);
    printf("%d\n", x);
    
    x = fun_for(0, 0);
    printf("%d\n", x);

    x = fun_for(0, 1);
    printf("%d\n", x);

    x = fun_for(8, 0);
    printf("%d\n", x);

    return 0; 
}
