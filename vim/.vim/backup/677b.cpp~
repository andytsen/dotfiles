#include <iostream>
using namespace std;

int main()
{
    int n, h, k;
    cin >> n >> h >> k;
    int foo[n];
    for(int i = 0; i < n; i++)
    {
        cin >> foo[i];
    }

    int time = 0;
    int r = 0;
    for(int i = 0; i < n; i++)
    {
        if((foo[i] + r) > h)
        {
            time++;
            time += foo[i]/k;
            r = foo[i] % k; 
        }
        else
        {
            time += (foo[i] + r)/k;
            r = (foo[i] + r) % k;
        }
    }
    cout << time; 

    return 0;
}
