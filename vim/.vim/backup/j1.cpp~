#include <iostream>
using namespace std;



class Spell {
    public:
        int dmg;
        int manacost;
        int cd; 
        int lvl;
};

class Hero {
    public: 
        Spell spell1;
        Spell spell2;
        const char name;
        int attribute;
};

class Pokemon {
    public:    
        char* name;
        int type;
        void call() {
            // assume name is what we want. 
            cout << name << endl;
        } 
    protected:
        int width;
        int height;
};

class Mudkip: public Pokemon {
    public:
        void mudsport() {
            cout << "All electric attacks have been weakened!" << endl;
        }    
};

int main() {
    Spell *spell1;
    spell1->dmg = 0;
    Mudkip nopu;
    
    
    char name[7] = "Mudkip";
    nopu.name = &(name[0]);
    nopu.call();
    
    nopu.mudsport();
    return 0;
}
