#include <iostream>
using namespace std;

int main(int argc, char const *argv[]) {
    int a[2] = { 3, 7};

    int *p = &a[0];


    cout << (*p)++ << endl;
    cout << *p << endl;

    // dynamic
    int **a1 = new int*[10];
    for(int i = 0; i < 10; i++) {
        a1[i] = new int[10];
    }

    //cleaning up`
    for(int i = 0; i < 10; i++) {
        delete a1[i];
    }
    delete[] a1;

    int* r = new int(5);
    delete r; // deletes the pointer as well
}
